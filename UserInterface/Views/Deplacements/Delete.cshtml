@model Entities.Deplacement

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Deplacement</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Date de déplacement", htmlAttributes: new { @class = "col-sm-1 text-left" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.Label("Cout de déplacement", htmlAttributes: new { @class = "col-sm-1 text-left" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cout)
        </dd>

        <dt>
            @Html.Label("Observation", htmlAttributes: new { @class = "col-sm-1 text-left" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observation)
        </dd>
        <dt>
            @Html.Label("Colaborateurs", htmlAttributes: new { @class = "col-sm-1 text-left" })
        </dt>
        <dd>
            @foreach (var col in Model.Colaborateur)
            {
                @Html.DisplayFor(model => col.Nom)<br />
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
