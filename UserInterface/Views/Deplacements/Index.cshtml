@model IList<Entities.Deplacement>

@{
    ViewBag.Title = "Index";
}

<h3>Gestion des deplacements</h3>


<br />
<div class="row">
    <div class="col-lg-3 pull-left">
        <div class="col-md-2">
            <a href="@Url.Action("Export", "Deplacements",new { ExportType = "PDF" })">
                <i class="fa fa-file-pdf-o" style="font-size:26px"></i>
            </a>
        </div>

        <div class="col-md-2">
            <a href="@Url.Action("Export", "Deplacements",new { ExportType = "Excel" })">
                <i class="fa fa-file-excel-o" style="font-size:26px"></i>
            </a>
        </div>
    </div>
    <div class="col-sm-1 pull-right">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Deplacements")'"><i class="glyphicon glyphicon-plus"></i></button>
    </div>
</div>
<br />
<div class="row">

    <div class="col-md-12">

        <div class="panel panel-primary list-panel" id="list-panel">

            <div class="panel-heading list-panel-heading">

                <h1 class="panel-title list-panel-title">Deplacements</h1>

            </div>

            <div class="panel-body">

                <table id="assets-data-table" class="table table-striped table-bordered TableColab" style="width:100%">

                    <thead>
                        <tr>
                            <th>@Html.Label("Nom collaborateur", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Prénom collaborateur", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Date déplacement", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Cout déplacement", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Observation", new { @class = "ThLabel" })</th>
                            <th>....</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
            {
                            <tr>
                                <td>
                                    @foreach (var col in item.Colaborateur)
                                    {
                                        @Html.DisplayFor(model => col.Nom)<br />
                                    }
                                </td>
                                <td>
                                    @foreach (var col in item.Colaborateur)
                                    {
                                        @Html.DisplayFor(model => col.Prenom)<br />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cout)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observation)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Details", "Deplacements",new { id=item.Id })'"><i class="glyphicon glyphicon-eye-open"></i></button>
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Deplacements",new { id=item.Id})'"><i class="glyphicon glyphicon-pencil"></i></button>
                                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Deplacements",new { id=item.Id})'"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>