@model IList<Entities.DemandeVisa>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}


<h3>Gestion des demandes Visa</h3>


<br />
<div class="row">
    <div class="col-sm-1 pull-right">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "UIDemandeVisa")'"><i class="glyphicon glyphicon-plus"></i></button>
    </div>
</div>
<br />
<div class="row">

    <div class="col-md-12">

        <div class="panel panel-primary list-panel" id="list-panel">

            <div class="panel-heading list-panel-heading">

                <h1 class="panel-title list-panel-title">Demande Visa</h1>

            </div>

            <div class="panel-body">

                <table id="assets-data-table" class="table table-striped table-bordered TableColab" style="width:100%">

                    <thead>
                        <tr>
                            <th>@Html.Label("Nom collaborateur", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Prénom collaborateur", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Date demande", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Statut", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Début validité Visa", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Fin validité Visa", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Durée", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Observation", new { @class = "ThLabel" })</th>
                            <th>....</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Colaborateur.Nom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Colaborateur.Prenom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateValiditeVisa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateFinVisa)
                                </td>
                                <td>
                                    @(item.DateFinVisa.HasValue ?  ( (@item.DateFinVisa.Value- @item.DateValiditeVisa.Value).Days/30).ToString() : "")
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observation)
                                </td>
                                <td style="width:15%">
                                    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Details", "UIDemandeVisa",new { id=item.Id })'"><i class="glyphicon glyphicon-eye-open"></i></button>
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "UIDemandeVisa",new { id=item.Id})'"><i class="glyphicon glyphicon-pencil"></i></button>
                                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "UIDemandeVisa",new { id=item.Id})'"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

