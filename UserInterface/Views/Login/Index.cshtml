@model Entities.Colaborateur
@{
    ViewBag.Title = "Index";
}
<div class="loginPanel ">
        <div class="logo-container md_title"><img src="~/Content/SQLI_logo.png" /></div>
    <div class="loginForm">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()         
    @Html.ValidationSummary(true)
  
            <div class="form-group">
                <label for="exampleInputEmail1">Login</label>
                  @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                 @Html.PasswordFor(model => model.Password, new { @class = "form-control", autocomplete = "off" })
            </div>
            <div class="btn-form">
                <button type="submit" class="btn btn-primary ">Submit</button>
            </div>
            <br />
    if (@ViewBag.Message != null)
    {
        <div style="color:red">
            @ViewBag.Message
        </div>
    }
    if (@TempData["Message"] != null)
    {
        <div style="color:red">
            @TempData["Message"].ToString()
        </div>
    }
@Html.ActionLink("Mot de passe oublié ?", "RecoverPassword", "Login");
}
        </div>
</div>
