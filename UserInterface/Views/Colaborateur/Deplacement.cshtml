@model IList<Entities.Deplacement>

@{
    ViewBag.Title = "Index";
}

<h3>Deplacements</h3>


<br />
<div class="row">

    <div class="col-md-12">

        <div class="panel panel-primary list-panel" id="list-panel">

            <div class="panel-heading list-panel-heading">

                <h1 class="panel-title list-panel-title">Deplacement</h1>

            </div>

            <div class="panel-body">

                <table id="assets-data-table" class="table table-striped table-bordered TableColab" style="width:100%">

                    <thead>
                        <tr>
                            <th>@Html.Label("Nom collaborateur", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Prénom collaborateur", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Date déplacement", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Cout déplacement", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Observation", new { @class = "ThLabel" })</th>
                        </tr>
                    </thead>
                    <tbody>
            
                          @foreach (var item in Model)
                          {
                            <tr>
                                <td>
                                    @foreach (var col in item.Colaborateur)
                                    {
                                        @Html.DisplayFor(model => col.Nom)<br />
                                    }
                                </td>
                                <td>
                                    @foreach (var col in item.Colaborateur)
                                    {
                                        @Html.DisplayFor(model => col.Prenom)<br />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cout)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observation)
                                </td>

                            </tr>
                          }
                    </tbody>
                </table>
               <div class="message">@ViewBag.message</div> 
            </div>
        </div>
    </div>
</div>

