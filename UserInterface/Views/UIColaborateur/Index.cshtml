@using PagedList;
@using PagedList.Mvc;
@model IList<Entities.Colaborateur>


@{
    ViewBag.Title = "Index";
}


<h3>Gestion des collaborateurs</h3>


<br />
<div class="row">
    <div class="col-lg-3 pull-left">
        <div class="col-md-2"><a href="@Url.Action("Export", "UIColaborateur",new { ExportType = "PDF" })">
                                  <i class="fa fa-file-pdf-o" style="font-size:26px"></i></a>
        </div>
        
        <div class="col-md-2"><a href="@Url.Action("Export", "UIColaborateur",new { ExportType = "Excel" })">
    <i class="fa fa-file-excel-o" style="font-size:26px"></i></a>
        </div>
    </div>
    <div class="col-sm-1 pull-right">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "UIColaborateur")'"><i class="glyphicon glyphicon-plus"></i></button>
    </div>
</div>
<br />
<div class="row">

    <div class="col-md-12">

        <div class="panel panel-primary list-panel" id="list-panel">

            <div class="panel-heading list-panel-heading">

                <h1 class="panel-title list-panel-title">Collaborateurs</h1>

            </div>

            <div class="panel-body">

                <table id="assets-data-table" class="table table-striped table-bordered TableColab" style="width:100%">

                    <thead>
                        <tr>
                            <th>@Html.Label("Nom", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Prénom", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Email", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Equipe", new { @class = "ThLabel" })</th>
                            <th>@Html.Label("Poste", new { @class = "ThLabel" })</th>
                            <th>....</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Prenom)
                                </td>
                                <td>
                                    @Html.ActionLink(item.Email, "Message", new { id = item.IdCol })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Equipe)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Poste)
                                </td>
                                <td style="width:20%">
                                    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Details", "UIColaborateur",new { id=item.IdCol })'"><i class="glyphicon glyphicon-eye-open"></i></button>
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "UIColaborateur",new { id=item.IdCol})'"><i class="glyphicon glyphicon-pencil"></i></button>
                                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "UIColaborateur",new { id=item.IdCol})'"><i class="glyphicon glyphicon-trash"></i></button>
                                    <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Create", "UIDemandeVisa",new { idt=item.IdCol})'">Visa</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.ActionLink("Collaborateurs Report","CollaborateursReport")