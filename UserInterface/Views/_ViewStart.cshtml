@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();

    Layout = "~/Views/Shared/_Layout.cshtml";
    if (controller == "Login")
    {
        Layout = "~/Views/Shared/_LogLayout.cshtml";

    }
    if (controller == "Colaborateur")
    {
        Layout = "~/Views/Shared/_ColaborateurLayout.cshtml";
    }
    if (Session["Role"] != null && Session["DateConnection"]!=null && Session["Role"].Equals("Colaborateur"))
    {
        
            Layout = "~/Views/Shared/_ColaborateurLayout.cshtml";

        
    }
}
